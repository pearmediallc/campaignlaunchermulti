# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=fb_campaign_launcher
DB_USER=root
DB_PASSWORD=yourpassword

# Server Configuration
PORT=5002
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-change-this
JWT_EXPIRY=7d

# Facebook App Configuration (Required for OAuth)
FB_APP_ID=your_facebook_app_id
FB_APP_SECRET=your_facebook_app_secret
FB_API_VERSION=v18.0

# Facebook OAuth Redirect URI
FB_REDIRECT_URI=http://localhost:5002/api/auth/facebook/callback

# Facebook Ad Account Configuration
FB_AD_ACCOUNT_ID=act_your_ad_account_id
FB_ACCESS_TOKEN=your_facebook_access_token
FB_PAGE_ID=your_facebook_page_id
FB_PIXEL_ID=your_facebook_pixel_id

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Encryption Key for Token Storage (Generate with: openssl rand -hex 32)
ENCRYPTION_KEY=generate_a_64_character_hex_string_for_encryption

# Redis Configuration (Optional - for session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Eligibility Criteria Configuration
MIN_ACCOUNT_AGE_DAYS=30
REQUIRE_SPENDING_HISTORY=false
REQUIRE_PAYMENT_METHOD=true
MIN_AD_ACCOUNTS=1
CHECK_BUSINESS_VERIFICATION=false
ELIGIBILITY_VALIDITY_DAYS=30

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for fallback verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@yourcampaignapp.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Development Settings
SKIP_AUTH_CHECK=false
DEBUG_MODE=false

# Facebook OAuth Permissions (comma-separated)
FB_REQUIRED_PERMISSIONS=ads_management,business_management,pages_show_list,ads_read,pages_read_engagement,pages_manage_ads

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Session Secret (for OAuth state management)
SESSION_SECRET=your-session-secret-change-this

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_FACEBOOK_AUTH=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_MANUAL_REVIEW=false
ENABLE_AUTO_TOKEN_REFRESH=true

# Facebook App Rotation Configuration (NEW - for rate limit management)
# Enable automatic rotation between backup apps when rate limits are hit
ENABLE_FB_APP_ROTATION=false

# Encryption key for backup app tokens (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# IMPORTANT: Keep this secure and never commit to version control
BACKUP_APPS_ENCRYPTION_KEY=generate_a_64_character_hex_string_here